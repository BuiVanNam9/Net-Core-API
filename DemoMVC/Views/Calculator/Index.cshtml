@model DemoMVC.Models.CalculatorModel

<h2>Máy tính đơn giản</h2>
<form asp-action="Index" method="post">
    <div>
        <label>Số 1:</label>
        <input asp-for="Number1" type="number" required />
    </div>
    <div>
        <label>Số 2:</label>
        <input asp-for="Number2" type="number" required />
    </div>
    <div>
        <label>Phép tính:</label>
        <select asp-for="Operation">
            <option value="Add">Cộng</option>
            <option value="Sub">Trừ</option>
            <option value="Mul">Nhân</option>
            <option value="Div">Chia</option>
        </select>
    </div>
    <button type="submit">Tính</button>
</form>
